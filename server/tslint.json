{
    "defaultSeverity": "error",
    "extends": ["tslint:recommended", "tslint-config-prettier"],
    "jsRules": {},
    "rules": {
        "curly": [true, "ignore-same-line"],
        "max-classes-per-file": [true, 15],
        "quotemark": [true, "single", "avoid-escape"]
    },
    "linterOptions": {
        "exclude": ["node_modules/**"]
    },
    "rulesDirectory": []
}
